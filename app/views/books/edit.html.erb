<h1>Editing Book</h1>
 <%= form_with model: @book do |f| %>
    <div class="aria">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>
    <div class="aria">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <div class="aria">
      <%= f.submit 'Update Book' %>
    </div>
 <% end %>

<%= link_to "Show", book_path(@book.id) %>
