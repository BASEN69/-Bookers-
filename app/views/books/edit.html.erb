<h1>Editing Book</h1>
 <% if @book.errors.any? %> 
 <div class="error">
   <p class="error-message"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
     <ul class="error-text">
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
     </ul>  
 </div>  
 <% end %>
 <%= form_with model: @book do |f| %>
    <div class="aria">
      <%= f.label :title, class:"label-name" %>
      <%= f.text_field :title %>
    </div>
    <div class="aria">
      <%= f.label :Body, class:"label-name" %>
      <%= f.text_area :body %>
    </div>
    <div class="aria">
      <%= f.submit 'Update Book' %>
    </div>
 <% end %>

<%= link_to "Show", book_path(@book.id) %>
