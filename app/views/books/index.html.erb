<html>
  <body>
    <h1>Boo</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td>"Destroy"</td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <h2>New book</h2>
    <%= form_with model: @book, url: '/books', methhod: :post do |f| %>
    <div class="aria">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class="aria">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
    <div class="aria">
      <%= f.submit 'Create Book' %>
    </div>
    <% end %>
  </body>



</html>