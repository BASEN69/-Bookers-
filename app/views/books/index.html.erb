<html>
  <body>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure ?" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <h2>New book</h2>
    <% if @book.errors.any? %>
    <div class="error">
      <p class="error-message"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
      <ul class="error-text">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= form_with model: @book do |f| %>
    <div class="aria">
      <%= f.label :title, class:"label-name" %>
      <%= f.text_field :title, class:"input-area" %>
    </div>
    <div class="aria">
      <%= f.label :Body, class:"label-name" %>
      <%= f.text_area :body, class:"input-area" %>
    </div>


    <div class="aria">
      <%= f.submit 'Create Book' %>
    </div>
    <% end %>
  </body>



</html>









